<% provide(:title, 'Create Event') %>
<h1>Create Event</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :calevent, url: create_event_path do |f| %>

        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>

        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>

        <%= f.label :start, "Start" %>
        <%= f.datetime_select :start, class: 'form-control'%>

        <%= f.label :end, "End" %>
        <%= f.datetime_select :end, class: 'form-control'%>

        <%= f.submit "Create event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>